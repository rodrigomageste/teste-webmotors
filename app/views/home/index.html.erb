<form action="/models" method="GET">
  <p>
    <label for="select_webmotors_make">Escolha a Fabricante:</label>
    <select id="select_webmotors_make" name="webmotors_make_id">
      <% @makes.each do |make| %>
        <option value="<%= make.webmotors_id %>"><%= make.name %></option>
      <% end %>
    </select>
  </p>

  <input type="submit" value="Buscar modelos">
</form>
